<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wen.transitrecorder.LineUpdateActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="公交线路"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bus_line_update_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="系统数据"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/bus_line_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="https://raw.githubusercontent.com/wsui/transitRecorder/master/bus.xls" />

            <Button
                android:id="@+id/bus_update_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="公交线路更新" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:background="@color/clr1"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="地铁线路"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subway_line_update_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="系统数据"
                android:textAlignment="center"
                android:textAllCaps="false" />

            <EditText
                android:id="@+id/subway_line_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="https://raw.githubusercontent.com/wsui/transitRecorder/master/subway.xls" />

            <Button
                android:id="@+id/subway_update_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="地铁线路更新" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
